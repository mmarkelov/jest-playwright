{
  "name": "jest-playwright-preset",
  "version": "1.0.0-rc1",
  "main": "index.js",
  "description": "Running tests using Jest & Playwright.",
  "license": "MIT",
  "keywords": [
    "jest",
    "playwright",
    "jest-playwright",
    "jest-playwright-preset"
  ],
  "author": "playwright-community",
  "bugs": {
    "url": "https://github.com/playwright-community/jest-playwright/issues"
  },
  "types": "./types/global.d.ts",
  "repository": {
    "url": "https://github.com/playwright-community/jest-playwright.git",
    "type": "git"
  },
  "homepage": "https://github.com/playwright-community/jest-playwright#readme",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "tsc",
    "format": "prettier --write \"*.{js,md}\" \"src/**/*.js\"",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts",
    "prepublishOnly": "npm run build",
    "test": "npm run test:src && npm run test:e2e",
    "test:src": "jest",
    "test:e2e": "jest -c jest.config.e2e.js",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "expect-playwright": "^0.2.4",
    "jest-circus": "^26.0.1",
    "jest-environment-node": "^26.0.1",
    "jest-process-manager": "^0.2.2",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.5",
    "@types/jest": "26.0.0",
    "@types/jest-dev-server": "4.2.0",
    "@types/node": "14.0.13",
    "@types/rimraf": "^3.0.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "coveralls": "3.1.0",
    "eslint": "7.3.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.11",
    "playwright": ">=1.1.1",
    "playwright-chromium": ">=1.1.1",
    "playwright-core": "npm:playwright-chromium@>=1.1.1",
    "prettier": "2.0.5",
    "snyk": "^1.346.0",
    "ts-jest": "26.1.1",
    "typescript": "3.9.5"
  }
}
